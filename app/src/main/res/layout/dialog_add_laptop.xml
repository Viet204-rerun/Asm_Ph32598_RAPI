<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#8FEFE7"

    >

    <EditText
        android:layout_marginVertical="20dp"
        android:id="@+id/edt_addTen"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Nhập Tên Laptop"
        android:background="@drawable/vienbtn"
        android:inputType="text" />

    <EditText
        android:id="@+id/edt_addGia"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Nhập Giá Laptop"
        android:background="@drawable/vienbtn"
        android:inputType="number" />

    <EditText
        android:layout_marginVertical="20dp"

        android:id="@+id/edt_addLoai"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Nhập Hãng Laptop"
        android:background="@drawable/vienbtn"
        android:inputType="text" />

    <EditText
        android:id="@+id/edt_addAnh"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Nhập Ảnh Laptop"
        android:background="@drawable/vienbtn"
        android:inputType="text" />

</LinearLayout>
